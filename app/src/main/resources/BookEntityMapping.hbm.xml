<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class
        name="Book"
        table="BOOKS">
        <id
            name="id"
            column="BOOK_ID">
            <generator class="identity"/>
        </id>
        <property
            name="name"
            column="BOOK_NAME"
            type="string"/>
        <property
            name="stock"
            column="BOOK_STOCK"
            type="integer"/>
    </class>
</hibernate-mapping>
